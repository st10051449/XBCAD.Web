@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";

}


<style>


    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }


    #wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }


    #sidebar-wrapper {
        background-color: #9DC183;
        color: #fff;
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
    }


    #main-content {
        margin-left: 250px;
        flex-grow: 1;
        background-color: #F7F7F7;
        padding: 40px;
        text-align: center;
    }


    .heading-container {
        margin-top: 20px;
        padding: 20px 0;
        border-bottom: 2px solid #ccc;
    }


    .paragraph-container {
        margin-top: 40px;
    }


    #footer {
        background-color: #9DC183;
        color: black;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        flex-direction: column;
        text-align: center;
        min-height: 250px;
    }

    .contact-section {
        max-width: 1000px;
        width: 100%;
        padding: 0 20px;
    }

    .contact-info-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    .contact-info {
        padding: 15px;
        border: 1px solid #fff;
        border-radius: 8px;
        background-color: rgba(255, 255, 255, 0.2);
        width: 300px;
        min-width: 250px;
        flex: 1 1 300px;
        text-align: left;
    }
</style>

<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">

        <div class="sidebar-logo">
            <img src="~/Images/amlogo.jpg" alt="Business Logo" />
            <h3>Antonie Motors</h3>
        </div>
        <div class="sidebar-heading">Client Dashboard</div>
        <div class="list-group list-group-flush">
            <a href="@Url.Action("Index", "Customer")" class="list-group-item list-group-item-action">
                <i class="fas fa-tachometer-alt"></i> Home
            </a>
            <a href="@Url.Action("QuoteGeneratorCust", "Customer")" class="list-group-item list-group-item-action">
                <i class="fas fa-file-invoice-dollar"></i> Quote Generator
            </a>
            <a href="@Url.Action("ViewCarStatus", "Customer")" class="list-group-item list-group-item-action">
                <i class="fas fa-users"></i> View Car Status
            </a>
            <a href="@Url.Action("ServiceHistory", "Customer")" class="list-group-item list-group-item-action">
                <i class="fas fa-car"></i> View Service History
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div id="main-content">

        <div class="heading-container">
            <h1 class="display-4" style="font-weight: bold;">Welcome to Antonie Motors</h1>
        </div>


        <div class="paragraph-container">
            <p style="font-size: 1.2rem; margin-top: 30px;">
                At Antonie Motors, we are dedicated to providing top-notch car servicing and maintenance
                solutions tailored to meet your needs. Our team of professionals is here to ensure your
                vehicle gets the care it deserves.
            </p>
            <p style="font-size: 1.2rem; font-weight: bold; margin-bottom: 50px;">
                Thank you for choosing us for your automotive needs. Your satisfaction is our priority!
            </p>
        </div>
    </div>

    <!-- Contact Us -->
