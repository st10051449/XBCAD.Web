@model List<EmployeeModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid" style="margin-left: 250px;">
    <h2>Employees</h2>
    <p>View all employees under your management.</p>

    <!-- Search Form -->
    <form method="get" action="/Admin/EmployeeManagement">
        <div class="form-group row">
            <div class="col-md-8">
                <input type="text" name="searchQuery" class="form-control" placeholder="Search by name, email, or phone..." />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
            <div class="col-md-2">
                <a href="/Admin/EmployeeManagement" class="btn btn-secondary">Display All</a>
            </div>
        </div>
    </form>

    <!-- Employee Table -->
    <div class="card">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Physical Address</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">No employees found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.firstName</td>
                            <td>@employee.lastName</td>
                            <td>@employee.email</td>
                            <td>@employee.phone</td>
                            <td>@employee.address</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
