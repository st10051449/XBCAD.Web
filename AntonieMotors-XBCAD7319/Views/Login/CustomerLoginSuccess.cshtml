@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Registration Success </title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: url('/Images/regbg.jpg');
            background-size: cover;
            background-position: center;
            position: relative;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(0, 0, 0, 0.5); /* Black overlay with 50% opacity */
                z-index: 1;
            }

        .registration-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
            position: relative;
            z-index: 2;
        }

        .registration-box {
            background-color: rgba(255, 255, 255, 0.2); /* Light white with transparency */
            padding: 40px;
            border-radius: 15px; /* Rounded corners */
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2); /* Soft shadow */
            text-align: center;
            width: 400px;
            backdrop-filter: blur(10px); /* Blurry background */
            border: 1px solid rgba(255, 255, 255, 0.3); /* Light border for definition */
        }

            .registration-box h2 {
                margin-bottom: 20px;
                color: white; /* Title text in white */
                font-size: 28px;
                font-weight: bold;
            }

            .registration-box label {
                text-align: left;
                display: block;
                color: #fff; /* Label in white */
                font-size: 14px;
                margin-bottom: 5px;
            }

            .registration-box input[type="text"],
            .registration-box input[type="email"],
            .registration-box input[type="password"] {
                width: 90%;
                padding: 12px;
                margin: 10px 0;
                border-radius: 25px; /* Rounded inputs */
                border: 1px solid #ccc;
                box-shadow: inset 0px 0px 5px rgba(0, 0, 0, 0.1);
                font-size: 16px;
            }

            .registration-box input::placeholder {
                color: #aaa;
                font-size: 14px;
            }

            .registration-box button[type="submit"] {
                width: 100%;
                padding: 12px;
                background-color: #28a745; /* Green button */
                color: white;
                border: none;
                border-radius: 25px; /* Rounded button */
                cursor: pointer;
                font-size: 16px;
                font-weight: bold;
                transition: background-color 0.3s;
            }

                .registration-box button[type="submit"]:hover {
                    background-color: #218838; /* Darker green on hover */
                }

            .registration-box a {
                display: block;
                margin-top: 10px;
                font-size: 14px;
                color: #007bff;
                text-decoration: none;
            }

                .registration-box a:hover {
                    text-decoration: underline;
                }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding: 10px;
            color: white;
            background-color: rgba(0, 0, 0, 0.7);
        }
    </style>
</head>
<body>

    <div class="registration-container">
        <div class="registration-box">
            <h2>Login</h2>
            <form action="/Login">

                <h2>Login Successful!</h2>
                <p>You have successfully logged into Antonie Motors.</p>
                <a href="/Home/Index">Return Home</a>


            </form>

        </div>
    </div>

   
</body>
</html>
